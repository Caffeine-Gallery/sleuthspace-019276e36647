type PersonId = nat;
type Person = 
 record {
   address: text;
   contactDetails: text;
   firstName: text;
   id: PersonId;
   lastName: text;
 };
type NoteId = nat;
type Note = 
 record {
   content: text;
   creationDate: int;
   id: NoteId;
   personId: PersonId;
   title: text;
 };
type CommentId = nat;
type Comment = 
 record {
   content: text;
   creationDate: int;
   id: CommentId;
   personId: PersonId;
 };
service : {
  addComment: (PersonId, text) -> (opt CommentId);
  addNote: (PersonId, text, text) -> (opt NoteId);
  addPerson: (text, text, text, text) -> (PersonId);
  getAllPeople: () -> (vec Person) query;
  getCommentsForPerson: (PersonId) -> (vec Comment) query;
  getNotesForPerson: (PersonId) -> (vec Note) query;
  getPerson: (PersonId) -> (opt Person) query;
}
